{
  "name": "Web Clipper",
  "description": "Build an Extension!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["http://localhost:8080/"]
  },
  "action": {
    "default_title": "Open",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "activeTab", "contextMenus", "scripting"]
}
